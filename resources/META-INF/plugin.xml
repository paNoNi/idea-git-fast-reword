<idea-plugin>

  <id>idea-git-fast-reword</id>

  <name>Idea Git Fast Reword</name>

  <version>1.0</version>

  <vendor url="https://github.com/paNoNi/idea-git-fast-reword" email="yaroshchuk2000@gmail.com" >paNoNi&amp;shchuko</vendor>

  <description>A utility helps you to reword commits faster</description>

  <idea-version since-build="173.0"/>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.java</depends>
  <depends>Git4Idea</depends>

  <extensions defaultExtensionNs="com.intellij"/>

  <actions>
    <action id="ifmo.java.idea.git_fast_reword.IdeaGitFastReword"
            class="ifmo.java.idea.git_fast_reword.IdeaGitFastReword" text="Fast Edit Commit Message...">
      <add-to-group group-id="Git.Log.ContextMenu" anchor="after" relative-to-action="Git.Reword.Commit"/>
    </action>
  </actions>

</idea-plugin>